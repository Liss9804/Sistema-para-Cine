<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/noseaceptaImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/noseacepta"
        android:contentDescription="Imagen de la Película 1"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valentín es el soltero más mujeriego de Acapulco.
         Un día, una mujer de su pasado deja un bebé en su puerta y desaparece.
          Valentín decide ir a Los Ángeles en su búsqueda, pero en vez de encontrar a la madre,
          descubre un hogar para él y su nueva hija Maggie.."
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/buyTicketButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comprar Boleto"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/reserveTicketButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reservar Boleto"
        android:layout_marginTop="10dp"/>
</LinearLayout>
