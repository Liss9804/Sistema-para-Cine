<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:id="@+id/paymentMethodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INTRODUCE MÉTODO DE PAGO:"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <!-- Botón para pago por transferencia bancaria -->
        <Button
            android:id="@+id/transferButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago por Transferencia Bancaria"
            android:backgroundTint="#80B0B0B0"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp" />

        <!-- Botón para pago con tarjeta de crédito -->
        <Button
            android:id="@+id/cardPaymentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago con Tarjeta de Crédito"
            android:backgroundTint="#80B0B0B0"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/bottomImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/visa"
            android:contentDescription="Logotipo de Visa" />

    </LinearLayout>
</ScrollView>