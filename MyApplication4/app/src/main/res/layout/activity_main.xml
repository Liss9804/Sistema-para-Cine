<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="Imagen de fondo"
        android:scaleType="centerCrop"
        android:src="@drawable/reset" />

    <!-- Campo de texto para el usuario -->
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Usuario"
        android:background="@drawable/border_style"
        android:padding="15dp"
        android:inputType="text" />

    <!-- Campo de texto para la contraseña -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Contraseña"
        android:background="@drawable/border_style"
        android:padding="15dp"
        android:inputType="textPassword" />

    <!-- Botón de inicio de sesión -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Iniciar Sesión"
        android:background="@color/transparentGray"
        android:textColor="@android:color/black"
        android:padding="15dp" />

    <!-- Botón de reiniciar contraseña -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparentGray"
        android:padding="15dp"
        android:text="Reiniciar Contraseña"
        android:textColor="@android:color/black" />

    <!-- Botón para ingresar como Administrador -->
    <Button
        android:id="@+id/adminLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetPasswordButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/transparentGray"
        android:padding="15dp"
        android:text="Administrador"
        android:textColor="@android:color/black" />

    <!-- Botón para ingresar como Taquillero -->
    <Button
        android:id="@+id/cashierLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetPasswordButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/transparentGray"
        android:padding="15dp"
        android:text="Taquillero"
        android:textColor="@android:color/black" />

</RelativeLayout>
